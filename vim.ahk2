; {{{ dbg Windows

dbgWin := guiCreate(
  '+alwaysOnTop'
)

dbgWin.onEvent('close', (*) => exitApp())

dbgWinEdit := dbgWin.add('edit',
   'r1 '   . ; Number of rows
   'w300 ' . ; Width in pixels
   'vEdt ' . ; Name of control (introduced with v)
   'readonly'
)

dbgAdd(txt) {
  global dbgWinEdit
  dbgWinEdit.text := dbgWinEdit.text  . txt
}

dbgSet(txt) {
  global dbgWinEdit
  dbgWinEdit.text := txt
}


