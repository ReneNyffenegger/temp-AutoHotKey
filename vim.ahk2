activeProcess() { ; {{{

  return winGetProcessName('a')

} ; }}}

vim_ignore_hotkey() { ; {{{

  proc := activeProcess()

  if proc = 'ggg.exe' or proc = 'gvim.exe' or proc = 'vim.exe'
     return 1

  return 0
; dbgSet(proc)

} ; }}}

; vim_mode := 'insert'

esc:: ; {{{
^[::

  vim_normal_mode()

return ; }}}

i:: ; {{{

  vim_insert_mode()  

return ; }}}

vim_normal_mode() { ; {{{

   if vim_ignore_hotkey() {
      dbgSet('Not entering normal mode because vim_ignore_hotkey.')
      return
   }


;  global vim_mode
;  vim_mode := 'normal'

   dbgSet('Entered normal mode')
} ; }}}

vim_insert_mode() { ; {{{

;  global vim_mode
